// JavaScript code to change heading color on hover
const headings = document.querySelectorAll('h1, h2');

headings.forEach(heading => {
    heading.addEventListener('mouseover', () => {
        heading.style.color = 'blue'; // Change color to blue on hover
    });

    heading.addEventListener('mouseout', () => {
        heading.style.color = ''; // Reset color on mouseout
    });
});
